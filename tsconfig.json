{
    "compilerOptions": {
        "strict": true,
        "target": "ES2020",
        "module": "ES2020",
        "incremental": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": ["./src/**/*.ts"]
}
